{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run C++ (Windows)",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "g++ -std=c++17 \"${file}\" -o \"${fileBasenameNoExtension}.exe\" && type input.txt | \"${fileBasenameNoExtension}.exe\" > output.txt"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
